---
/**
 * index.astro
 *
 * Homepage for ElementalSugar Creative Studio
 * One-page site with semantic HTML5 structure
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
---

<BaseLayout
  title="Elemental Sugar Creative Studio"
  description="Calm, modern software crafted with a little sparkle. For thoughtful builders and mission-driven organizations."
>
  <Header />

  <main id="main-content" role="main">
    <Hero />

    <!-- Build Section -->
    <section id="build" aria-labelledby="build-heading">
      <div class="section-inner">
        <h2 id="build-heading" class="gradient-text">We BUILD</h2>
        <p>Build section content will go here</p>
      </div>
    </section>

    <!-- Solve Section -->
    <section id="solve" aria-labelledby="solve-heading">
      <div class="section-inner">
        <h2 id="solve-heading" class="gradient-text">We SOLVE</h2>
        <p>Solve section content will go here</p>
      </div>
    </section>

    <!-- Recent Work Section -->
    <section id="work" aria-labelledby="work-heading">
      <div class="section-inner">
        <h2 id="work-heading" class="gradient-text">Recent Work</h2>
        <p>Work section content will go here</p>
      </div>
    </section>

    <!-- About Section -->
    <section id="about" aria-labelledby="about-heading">
      <div class="section-inner">
        <h2 id="about-heading" class="gradient-text">About</h2>
        <p>About section content will go here</p>
      </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" aria-labelledby="contact-heading">
      <div class="section-inner">
        <h2 id="contact-heading" class="gradient-text">Get in Touch</h2>
        <p>Contact section content will go here</p>
      </div>
    </section>
  </main>
</BaseLayout>
