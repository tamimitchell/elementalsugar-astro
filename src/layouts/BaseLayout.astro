---
/**
 * BaseLayout.astro
 *
 * Base layout for ElementalSugar Creative Studio
 * Provides semantic HTML structure, meta tags, and global styles
 *
 * Props:
 * - title: Page title
 * - description: Meta description
 */

import SVGDefs from '../components/SVGDefs.astro';

export interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Calm, modern software crafted with a little sparkle. For thoughtful builders and mission-driven organizations."
} = Astro.props;

const canonicalURL = Astro.site ? new URL(Astro.url.pathname, Astro.site) : null;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    {canonicalURL && <link rel="canonical" href={canonicalURL} />}
    <meta name="generator" content={Astro.generator} />

    <!-- Theme color for mobile browsers -->
    <meta name="theme-color" content="#2F4A3A" />

    <!-- Geographic location -->
    <meta name="geo.region" content="US-CO" />
    <meta name="geo.placename" content="Salida, Colorado" />
    <meta name="geo.position" content="38.5347;-106.0000" />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Elemental Sugar Creative Studio" />
    {canonicalURL && <meta property="og:url" content={canonicalURL} />}
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://elementalsugar.com/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://elementalsugar.com/og-image.png" />

    <!-- Schema.org structured data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "ProfessionalService",
        "name": "Elemental Sugar Creative Studio",
        "description": "Calm, modern software crafted with a little sparkle. Discovery and storytelling tools for modern creators.",
        "url": "https://elementalsugar.com",
        "email": "mail@elementalsugar.com",
        "address": {
          "@type": "PostalAddress",
          "addressLocality": "Salida",
          "addressRegion": "CO",
          "addressCountry": "US"
        },
        "founder": {
          "@type": "Person",
          "name": "Tami Mitchell",
          "jobTitle": "Founder & Developer"
        },
        "sameAs": [
          "https://github.com/tamimitchell",
          "https://www.linkedin.com/in/tameramitchell/",
          "https://mastodon.social/@tamimitchell"
        ]
      }
    </script>

    <title>{title}</title>

    <!-- Preload fonts to prevent FOUT -->
    <link rel="preload" href="/fonts/comfortaa/comfortaa-latin-700-normal.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/cardo/cardo-latin-700-normal.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/atkinson/AtkinsonHyperlegibleNext-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/atkinson/AtkinsonHyperlegibleNext-Bold.woff2" as="font" type="font/woff2" crossorigin />
  </head>
  <body>
    <!-- Shared SVG gradient definitions -->
    <SVGDefs />

    <!-- Skip to main content for accessibility -->
    <a href="#main-content" class="skip-link">
      Skip to main content
    </a>

    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
